<!-- app/views/confirmations/new.html.erb -->
<%= form_with model: @user, url: confirmations_path do |form| %>
  <div style="margin:auto;border:2px solid black;padding-left:70px;padding-right:70px;padding-top:200px;padding-bottom:200px;border-radius:15px;background-image: url(https://e0.pxfuel.com/wallpapers/711/753/desktop-wallpaper-minimal-walls-for-pokemon-fans-collected-and-edited-by-me-share-and-enjoy.jpg); background-size: cover;">
  <h1 style="color: white;">Please confirm your email</h1>

    <%= form.email_field :email, required: true, style: 'padding: 10px; font-size: 16px; border: 2px solid black;' %>
    <%= form.submit "Confirm Email", style: 'font-weight: bold; color: white; border: 2px solid black; padding: 10px 20px; background-color: green;' %>
  </div>
<% end %>
